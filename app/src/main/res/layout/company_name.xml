<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="2dp">
    <ImageView
        android:id="@+id/id_iv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"></ImageView>

    <LinearLayout
        android:id="@+id/linear_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/id_iv_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/register_field_company_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/main_menu_text_size7"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:textSize="@dimen/main_menu_text_size4"
            android:hint="行业类别" />

    </LinearLayout>

    <ImageView
        android:id="@+id/id_prompt_image"
        android:layout_alignRight="@+id/linear_tv"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/navigate_next"></ImageView>


    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear_tv"
        android:background="@drawable/corners_bg_grey"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_iv_image"
        android:paddingLeft="10dp"
        android:layout_alignEnd="@+id/linear_tv"
        android:layout_alignStart="@+id/id_iv_image"
        android:layout_below="@+id/line"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:maxLines="2"
                android:text="联系地址:"
                android:textSize="@dimen/main_menu_text_size1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:maxLines="2"
                android:text="联系电话:"
                android:textSize="@dimen/main_menu_text_size1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>