<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wjbzg.www.obor.activity.PublishSuccessActivity">
    <include layout="@layout/toolbar_reback_white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/publish_success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/publish_field_success"
            android:textSize="@dimen/main_menu_text_size6"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
