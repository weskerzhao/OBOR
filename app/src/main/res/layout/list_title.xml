<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="#FFFFFF">
    <LinearLayout
        android:id="@+id/linear_tv"
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_company_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:text="1231"
            android:textSize="@dimen/main_menu_text_size5"
            android:textColor="@color/main_menu_white"
            android:background="@drawable/left_corners_bg"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_look_over"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center|right"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_look_over"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:hint="@string/home_field_look_over_more"
                android:textSize="@dimen/main_menu_text_size4" />
    </LinearLayout>
</LinearLayout>