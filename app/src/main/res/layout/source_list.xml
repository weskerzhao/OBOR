<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/id_iv_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/linear_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/id_iv_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_resource_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="最新资源标题"
            android:textSize="@dimen/main_menu_text_size9"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/main_menu_text_size"
            android:hint="资源类型" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:gravity="bottom|right"
            android:maxLines="2"
            android:text="合作区域"
            android:textSize="@dimen/main_menu_text_size3" />

    </LinearLayout>





</RelativeLayout>