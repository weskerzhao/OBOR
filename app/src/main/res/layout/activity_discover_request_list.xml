<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_menu_color_back_grey"
    tools:context="com.wjbzg.www.obor.activity.DiscoverRequestListActivity">
    <include layout="@layout/toolbar_reback"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:background="#FFFFFF"
        android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_serch"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/corners_bg_grey"
                android:orientation="horizontal">
                <!--<android.support.v7.widget.SearchView
                    android:id="@+id/serch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/main_menu_text_size4"
                    android:inputType="text"
                    android:gravity="center_vertical|left"
                    app:queryHint="@string/home_field_serch"
                    app:searchIcon="@null"
                    />-->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/serch"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/common_hint_request_source"
                    android:textSize="@dimen/main_menu_text_size1"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="28dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/sp_sort_type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:textSize="@dimen/main_menu_text_size1"
                android:text="排序方式"
                />
            <Spinner
                android:id="@+id/sp_industry_type"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:textSize="@dimen/main_menu_text_size1"
                android:text="行业类型"
                />
            <Spinner
                android:id="@+id/sp_cooperation_region"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:textSize="@dimen/main_menu_text_size1"
                android:text="合作区域"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_request_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
