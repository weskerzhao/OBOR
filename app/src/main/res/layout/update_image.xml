<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/common_field_update"
            android:textSize="@dimen/main_menu_text_size8"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:hint="@string/common_field_update_advice"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_update1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:background="@drawable/rectangle_dashp"/>
        <ImageView
            android:id="@+id/iv_update2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/distance_normal"
            android:background="@drawable/rectangle_dashp"/>
        <ImageView
            android:id="@+id/iv_update3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/distance_normal"
            android:background="@drawable/rectangle_dashp"/>
    </LinearLayout>





</LinearLayout>