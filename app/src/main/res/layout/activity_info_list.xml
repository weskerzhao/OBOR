<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_menu_color_back_grey"
    tools:context="com.wjbzg.www.obor.activity.RequestListActivity">
    <include layout="@layout/serch_toolbar_single_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_info_list"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corners_bg_blue"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:text="行业资讯"
                android:textColor="@color/white"
                android:textSize="@dimen/main_menu_text_size11"
                android:textStyle="italic|bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/iv_request"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/corners_bg_blue_small"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="主要类别"
            android:textColor="@color/main_menu_white"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_bg_blue_small"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="主要类别"
            android:textColor="@color/main_menu_white"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_bg_blue_small"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="主要类别"
            android:textColor="@color/main_menu_white"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_bg_blue_small"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="其他类别"
            android:textColor="@color/main_menu_white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="类别名称·资讯"
        android:background="#FFFFFF"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/main_menu_text_size8"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
